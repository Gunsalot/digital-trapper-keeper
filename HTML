    <script>
        function toggleSection(className) {
            const section = document.getElementById(className);
            if (section.style.display === 'none') {
                section.style.display = 'block';
            } else {
                section.style.display = 'none';
            }
        }

        function openDates() {
            // Add your code to open Google Calendar
            window.open('https://calendar.google.com/', '_blank');
        }

        function addHomework(className) {
            const homeworkItem = prompt(`Add new homework for ${className}:`);
            if (homeworkItem) {
                const homeworkList = document.getElementById(`${className.replace(/\s+/g, '')}Homework`);
                const listItem = document.createElement('li');
                listItem.textContent = homeworkItem;
                homeworkList.appendChild(listItem);
            }
        }

        function addNotes(className) {
            const notesItem = prompt(`Add new notes for ${className}:`);
            if (notesItem) {
                const notesContainer = document.getElementById(`${className.replace(/\s+/g, '')}Notes`);
                notesContainer.textContent = notesItem;
            }
        }
    </script>

